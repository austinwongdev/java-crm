<BorderPane minHeight="500.0" minWidth="400.0" prefHeight="800.0" prefWidth="1000.0" styleClass="border-pane" stylesheets="@../Resources/generalStylesheet.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.UpdateCustomerScreenController">
   <center>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" spacing="20.0" styleClass="vbox" stylesheets="@../Resources/generalStylesheet.css" BorderPane.alignment="CENTER">
         <children>
            <Label text="UPDATE CUSTOMER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="customerNameTxt" maxWidth="300.0" onKeyPressed="#onKeyPressedSubmit" promptText="CUSTOMER NAME">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="addressTxt" maxWidth="300.0" onKeyPressed="#onKeyPressedSubmit" promptText="ADDRESS 1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="address2Txt" maxWidth="300.0" onKeyPressed="#onKeyPressedSubmit" promptText="ADDRESS 2" />
            <TextField fx:id="postalCodeTxt" layoutX="60.0" layoutY="168.0" maxWidth="300.0" onKeyPressed="#onKeyPressedSubmit" promptText="ZIP/POSTAL CODE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="cityTxt" layoutX="60.0" layoutY="332.0" maxWidth="300.0" onKeyPressed="#onKeyPressedSubmit" promptText="CITY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="countryTxt" layoutX="60.0" layoutY="115.0" maxWidth="300.0" onKeyPressed="#onKeyPressedSubmit" promptText="COUNTRY">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </TextField>
            <TextField fx:id="phoneTxt" layoutX="60.0" layoutY="377.0" maxWidth="300.0" onKeyPressed="#onKeyPressedSubmit" promptText="PHONE NUMBER">
