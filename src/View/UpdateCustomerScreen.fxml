               <children>
                  <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#onActionSave" prefWidth="60.0" text="Save" />
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#onActionReturn" prefWidth="60.0" text="Back" />
