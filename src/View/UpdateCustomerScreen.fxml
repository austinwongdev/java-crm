            </HBox>
            <Label fx:id="errorLbl" prefHeight="34.0" prefWidth="300.0" textFill="#b50000" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
